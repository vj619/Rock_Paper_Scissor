<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vijay.rockpaperscissor.FirstPage"
    android:id="@+id/FirstPageRelativeLayout"
    android:background="#32a666"
    >


   <ImageView
       android:layout_width="300dp"
       android:layout_height="300dp"
       android:id="@+id/LogoImageView"
       android:layout_centerHorizontal="true"
       android:src="@drawable/boomboom"
       />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/Logo2ImageView"
        android:src="@drawable/rpsicon"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="120dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/PlayButton"
        android:layout_below="@id/LogoImageView"
        android:text="PLAY"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button_gradient_background"
        android:layout_marginLeft="3dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/HowToPlayButton"
        android:layout_below="@id/PlayButton"
        android:layout_marginLeft="60dp"
        android:text="Instructions"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button_gradient_background"
        android:layout_marginTop="5dp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/AboutButton"
        android:layout_below="@id/HowToPlayButton"
        android:layout_marginLeft="120dp"
        android:text="About Us"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button_gradient_background"
        android:layout_marginTop="5dp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/ExitButton"
        android:layout_below="@id/AboutButton"
        android:layout_alignParentRight="true"
        android:text="Exit"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button_gradient_background"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        />
</RelativeLayout>
