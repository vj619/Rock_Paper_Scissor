<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vijay.rockpaperscissor.MainActivity"
    android:id="@+id/SplashRelativeLayout"
    android:background="#32a666"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RockTextView"
        android:text="Rock"
        android:textColor="#ff0000"
        android:textSize="60sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PaperTextView"
        android:text="Paper"
        android:textColor="#ffd900"
        android:textSize="50sp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="125dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScissorTextView"
        android:text="Scissor"
        android:textColor="#0004ff"
        android:textSize="60sp"
        android:layout_marginTop="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/SplashLogoImageView"
        android:src="@drawable/rpsicon"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RandomTextView"
        android:layout_below="@id/SplashLogoImageView"
        android:layout_marginTop="120dp"
        android:text="WELCOME"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#4f0163"
        />

</RelativeLayout>

